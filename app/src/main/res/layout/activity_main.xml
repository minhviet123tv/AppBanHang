<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background_main"
    android:keepScreenOn="true" >

    <com.example.prm391x_searchfood_vietcvfx12045.wiget.ThietKeViewPager
        android:id="@+id/viewPager_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation"
        tools:ignore="SpeakableTextPresentCheck"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>

    <!--  Chú ý tạo file color riêng cho menu  -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        app:itemTextColor="@color/custom_navigation_color"
        app:itemIconTint="@color/custom_navigation_color"
        android:background="@drawable/bg_menu_navigation"
        app:menu="@menu/menu_bottom_navigation"/>

</RelativeLayout>